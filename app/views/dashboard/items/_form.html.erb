<div class="w-60 content">
  <h1>商品登録</h1>

  <hr>

  <%= form_with model: @item, url: dashboard_items_path, local: true do |f| %>
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "商品名", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :name, class: "form-control col-8" %>
    </div>

    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "商品説明", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_area :content, class: "form-control col-8" %>
    </div>

    <%= f.submit "商品を登録", class:"btn btn-log d-block mx-auto" %>
    
  <% end %>

  <div class="mt-4"><%= link_to "商品一覧に戻る", dashboard_items_path ,class: "d-flex justify-content-center"%></div>
</div>

