<div class="container mt-5">
  <span>
    <%= link_to "マイページ", mypage_users_path %> > <%=link_to "アカウント設定" , users_path %> > <%=link_to "アカウント情報の変更"  %> 
  </span>
  <div class="row justify-content-center content">
    <div class="col-md-5">
    
      <h3 class="mt-3 mb-3">アカウント情報の変更</h3>

      <hr>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "お名前" %><br>
          <%= f.text_field :name ,class: "text"%>
        </div>  

        <div class="field">
          <%= f.label :email,"メールアドレス"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "text"%>
        </div>

        <div class="field">
          <%= f.label :phone,"電話番号" %><br>
          <%= f.text_field :phone ,class: "text"%>
        </div>

        <div class="form-group">
          <%= f.label :current_password %> <i>(変更にはパスワードが必要です)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control", placeholder: "必須項目です" %>
        </div>

        <div class="form-group">
          <%= f.submit "保存する", class: "mt-3 btn btn-log" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>

