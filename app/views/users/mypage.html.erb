<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h2>マイページ</h2>
    <div class="d-flex align-items-center">
      <%= link_to logout_path, method: :delete do %>
        <button type="button" class="btn btn-outline-secondary">ログアウト</button>
      <% end %>          
    </div>
  </div>
  <hr>

  <div class="container">
    <div class="d-flex justify-content-between">
      <div class="row">
        <div class="col d-flex align-items-center ml-2 mt-3">
          <div class="d-flex flex-column">
            <label for="user-name">アカウント設定</label>
            <p>アカウント情報の編集</p>
          </div>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <%= link_to users_path do %>
          <i class="fas fa-chevron-right fa-2x" style="color:gray;"></i>
        <% end %>
      </div>
    </div>
  </div>

  <hr>


  <div class="container">
    <div class="d-flex justify-content-between">
      <div class="row">
        
        <div class="col d-flex align-items-center ml-2 mt-3">
          <div class="d-flex flex-column">
            <label for="user-name">パスワード変更</label>
            <p>パスワードを変更します</p>
          </div>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <%= link_to mypage_edit_password_users_path do %>
          <i class="fas fa-chevron-right fa-2x" style="color:gray;"></i>
        <% end %>
      </div>
    </div>
  </div>
  <hr>

  <div class="container">
    <div class="d-flex justify-content-between">
      <div class="row">
        
        <div class="col d-flex align-items-center ml-2 mt-3">
          <div class="d-flex flex-column">
            <label for="user-name">購入履歴</label>
            <p>過去の購入履歴を確認できます</p>
          </div>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <%= link_to root_path do %>
          <i class="fas fa-chevron-right fa-2x" style="color:gray;"></i>
        <% end %>
      </div>
    </div>
  </div>

  <hr>
</div>
